<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.messageSystem.model.dao.UserDao">

    <!--插入数据-->
    <insert id="insertUser">
        INSERT  INTO `user`(username,password,gender,birthday,email) VALUES
            (#{userName},#{password},#{gender},#{birthday},#{email})
    </insert>



    <resultMap id="queryUser" type="com.messageSystem.model.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="userName"/>
        <result column="password" property="password"/>
        <result column="admin" property="admin"/>
        <result column="gender" property="gender"/>
        <result column="birthday" property="birthday"/>
        <result column="e_mail" property="email"/>
    </resultMap>
    <!--查询所有用户-->
    <select id="selectUser" resultMap="queryUser">
       select * from `user`
    </select>

         <!--登录用户查询是否存在-->
    <select id="queryUser" resultMap="queryUser">
        SELECT * FROM `user` WHERE  username=#{userName}
    </select>


</mapper>